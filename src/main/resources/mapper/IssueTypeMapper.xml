<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="io.choerodon.issue.infra.mapper.IssueTypeMapper">

    <resultMap id="issueTypeWithStateMachineSchemeConfig" type="io.choerodon.issue.domain.IssueType">
        <id property="id" column="id"/>
        <result property="icon" column="icon"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="organizationId" column="organization_id"/>
        <result property="creationDate" column="creation_date"/>
        <result property="createdBy" column="created_by"/>
        <result property="lastUpdateDate" column="last_update_date"/>
        <result property="lastUpdatedBy" column="last_updated_by"/>
        <result property="objectVersionNumber" column="object_version_number"/>
        <association property="stateMachineSchemeConfig" javaType="io.choerodon.issue.domain.StateMachineSchemeConfig">
            <id property="id" column="c_id"/>
            <result property="schemeId" column="c_scheme_id"/>
            <result property="issueTypeId" column="c_issue_type_id"/>
            <result property="stateMachineId" column="c_state_machine_id"/>
            <result property="sequence" column="c_sequence"/>
            <result property="creationDate" column="c_creation_date"/>
            <result property="createdBy" column="c_created_by"/>
            <result property="lastUpdateDate" column="c_last_update_date"/>
            <result property="lastUpdatedBy" column="c_last_updated_by"/>
            <result property="objectVersionNumber" column="c_object_version_number"/>
        </association>
    </resultMap>

    <select id="fulltextSearch" resultType="io.choerodon.issue.domain.IssueType">
        SELECT * FROM issue_type
        WHERE 1=1
        <if test="issueType.organizationId != null">
            AND organization_id = #{issueType.organizationId}
        </if>
        <if test="issueType.name != null">
            AND name LIKE concat('%',#{issueType.name},'%')
        </if>
        <if test="issueType.description != null">
            AND description LIKE concat('%',#{issueType.description},'%')
        </if>
        <if test="param != null">
            AND ( name LIKE concat('%',#{param},'%')
            OR description LIKE concat('%',#{param},'%')
            )
        </if>
    </select>

    <select id="queryBySchemeId" resultType="io.choerodon.issue.domain.IssueType">
        SELECT
        t.*,
        c.sequence
        FROM issue_type t
        LEFT JOIN issue_type_scheme_config c on c.issue_type_id = t.id
        WHERE 1=1
        <if test="organizationId != null">
            AND t.organization_id = #{organizationId}
        </if>
        <if test="schemeId != null">
            AND c.scheme_id = #{schemeId}
        </if>
        order by c.sequence
    </select>

    <select id="queryIssueType" resultMap="issueTypeWithStateMachineSchemeConfig">
        SELECT IT.*,
          SMSC.id as c_id,
          SMSC.scheme_id as c_scheme_id,
          SMSC.issue_type_id as c_issue_type_id,
          SMSC.state_machine_id as c_state_machine_id,
          SMSC.sequence as c_sequence,
          SMSC.creation_date as c_creation_date,
          SMSC.created_by as c_created_by,
          SMSC.last_update_date as c_last_update_date,
          SMSC.last_updated_by as c_last_updated_by,
          SMSC.object_version_number as c_object_version_number
        FROM issue_type IT
        LEFT JOIN state_machine_scheme_config SMSC ON IT.id = SMSC.issue_type_id AND SMSC.scheme_id = #{schemeId}
        WHERE IT.organization_id = #{organizationId}
    </select>

</mapper>
